<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/top_bar"
        android:gravity="center"
        android:text="路径信息"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_profile_back"
        android:layout_width="61dp"
        android:layout_height="29dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/layout_search_btnmode_back" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="0dp"
        android:background="@drawable/layout_profile_destination_bg" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="90dp"
            android:layout_height="26dp"
            android:layout_marginLeft="20dp"
        	android:layout_marginTop="20dp"
            android:src="@drawable/layout_profile_title_destination" />

        <TextView
            android:id="@+id/tvDestinationName"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="120dp"
        	android:layout_marginTop="20dp"
        	android:gravity="left|center"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <ListView
            android:id="@+id/lvRoadList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:cacheColorHint="#00000000" >

        </ListView>

    </RelativeLayout>

</RelativeLayout>